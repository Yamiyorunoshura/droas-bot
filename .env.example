# Discord Bot Token (必須)
# 從 Discord Developer Portal 獲取: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# 資料庫配置 (必須)
DATABASE_URL=postgres://localhost/droas_bot
DATABASE_MAX_CONNECTIONS=10
DATABASE_MIN_CONNECTIONS=1
DATABASE_CONNECTION_TIMEOUT=30

# Redis 快取配置 (可選)
REDIS_URL=redis://localhost:6379
CACHE_ENABLE_REDIS=true
CACHE_DEFAULT_TTL_SECS=300
CACHE_FALLBACK_TO_MEMORY=true
CACHE_NAMESPACE=droas

# 監控配置 (可選)
DROAS_MONITORING_PORT=8080
DROAS_HEALTH_CHECK_INTERVAL=30
DROAS_DETAILED_METRICS=true
DROAS_PERFORMANCE_MONITORING=true

# 日誌配置
RUST_LOG=info